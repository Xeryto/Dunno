@model Dunno.Models.Helpers.NewsPost

@{ ViewData["Title"] = "Create"; }

<h1>Создание новости</h1>

<form class="form-row" method="post" enctype="multipart/form-data" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="p-1">
        <label asp-for="Title">Заголовок</label>
        <input class="form-control" asp-for="Title" maxlength="200" type="text">
    </div>
    <div class="p-1">
        <label asp-for="Description">Текст новости</label>
        <textarea class="form-control" asp-for="Description" rows="5" type="text"></textarea>
    </div>
    <!--            Фотографии новости-->
    <div class="container mt-2 mb-2">
        <div class="p-1">
            <label class="custom-file-label" asp-for="Image">Главная фотография:</label>
            <input accept=".jpg,.gif,.png" class="custom-file-input" asp-for="Image" required type="file">
        </div>
    </div>

    <div class="p-1">
        <button class="btn btn-primary" type="submit">Создать</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
