@model IEnumerable<Dunno.Models.News>

@{ ViewData["Title"] = "Index"; }

<h1>Новости</h1>

<p class="m-4">
    <a class="btn btn-primary" href="/News/Create" role="button">Создать новость</a>
</p>


@{ foreach (var news in Model)
                {
                    <div class="card m-2">
                        <div class="row">
                            <div class="col-sm-3" style="margin-left: 10px; display: flex; flex-direction: column; justify-content: center;">
                                @{ if (news.Image != null)
                                                    {
                                                        <img src="data:image; base64,@Convert.ToBase64String(news.Image)" class="rounded imgAdjust" style="width: 100%" />
                                                             }
                                    else
                {
                            <img class="rounded" src="https://via.placeholder.com/800x600"
                                 style="width: 100%">
                }
                                                             }
                                                    </div>
                            <div class="col">
                                <div class="card-body">
                                    <h5 class="card-title titleAdjust">@news.Title</h5>
                                    <p class="card-text descAdjust" style="overflow: hidden">
                                        @news.Description
                                    </p>
                                    <a class="stretched-link" asp-action="Details" asp-route-id="@news.Id"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                } }