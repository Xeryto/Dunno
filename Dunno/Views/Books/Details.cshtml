@model Dunno.Models.Book

@{ ViewData["Title"] = "Details"; }

<h1>@Html.DisplayFor(model => model.Title)</h1>

<div class="container">
    <div class="row" style="height: 350px; overflow: auto">

        <!--        Пример обложки и других фотографий книги         -->
        <div class="col-md-auto p-2" style="height: 100%">
            @{ if (Model.Image == null)
                {
        <img src="https://via.placeholder.com/800x600" alt="image" class="img-fluid" style="height: 100%"/> }
    else
    {
        <img src="data:image; base64,@Convert.ToBase64String(Model.Image)" alt="image" class="img-fluid" style="height: 100%"/> } }
        </div>
        <!--        Конец примера         -->

    </div>
</div>

<h3 class="mt-2">Где найти</h3>
<div class="container mt-2">
    <p style="font-size: 18px;">
        @Html.DisplayFor(model => model.Displacement)
    </p>
</div>

<h3>Описание</h3>
<div class="container mt-2">
    <p style="font-size: 18px;">
        @Html.DisplayFor(model => model.Description)
    </p>
</div>

<p class="m-3">
    <a class="btn btn-primary" asp-controller="Books" asp-action="Edit" asp-route-id="@Model.Id" role="button">Редактировать</a>
    <a class="btn btn-danger" asp-controller="Books" asp-action="Delete" asp-route-id="@Model.Id" role="button">Удалить книгу из библиотеки</a>
</p>
